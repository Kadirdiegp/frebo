generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id        String     @id @default(cuid())
  name      String
  year      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  locations Location[]

  @@unique([name, year])
}

model Location {
  id        String   @id @default(cuid())
  name      String   @unique
  events    Event[]  @relation("EventToLocation")
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id          String    @id @default(cuid())
  src         String
  alt         String?
  title       String?
  description String?
  raceNumber  String?
  category    String    @default("motocross")
  locationId  String?
  location    Location? @relation(fields: [locationId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
